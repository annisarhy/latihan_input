<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:text="Menjumlahkan 2 buah bilangan" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Masukan bilangan pertama"
            android:textSize="20dp"
            android:layout_marginTop="35dp"/>

        <EditText
            android:id="@+id/txtBiL1"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Masukan bilangan Kedua"
            android:textSize="20dp"
            android:layout_marginTop="35dp"/>

        <EditText
            android:id="@+id/txtBiL2"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp" />

        <Button
            android:id="@+id/btnCekBil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Hitung Bilangan"
            android:textSize="18dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil penjumlahan"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/hasil"
            android:layout_width="150dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp" />
    </LinearLayout>
</LinearLayout>